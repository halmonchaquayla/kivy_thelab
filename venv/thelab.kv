AnchorLayoutExample:

<AnchorLayoutExample>:
    #right, left, center
    anchor_x: "center"
    #bottom, top, center
    anchor_y: "top"
    size_hint: .3, .3
    BoxLayout:
        Button:
            text: "A"
            
        Button:
            text: "B"
           

<BoxLayoutExample>:
    #layout of buttons
    orientation: "horizontal"
    Button:
        text: "A"
        size_hint: .8, .5
    
    BoxLayout:
        orientation: "vertical"
        spacing: "10dp"
        Button:
            text: "B1"
        Button:
            text: "B2"
        Button:
            text: "B3"
            
    Label:
        text: "C"


<MainWidget>:
    Button: 

        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 0, 0, 1, 100
    Label: 
        text: "Hello"
        size: "100dp", "80dp"
        pos: "200dp", "300dp"
        color: 1, 0, 0, 100        